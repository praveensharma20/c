// C program to multiply two
// floating point numbers
#include <stdio.h>

// Function to multiply floating point
// numbers
float multiply(float a, float b)
{
return a * b;
}

// Driver code
int main()
{
	float A = 2.12, B = 3.88, product;

	// Calling product function
	product = multiply(A, B);

	// Displaying result up to 3 decimal places.
	printf("Product of entered numbers is:%.3f", product);

	return 0;
}

//there is another way to multiply 2 floating number

#include<stdio.h>
int main()
{
  double a,b,product;
  printf("enter two number :");
  scanf("%lf %lf",&a,&b);
  product=a*b;
  printf("Product=%2lf",product);
  return 0;
}
